extends layout


block content
	.w3-card-4
		header.w3-container.w3-teal
			h3.w3-left Student Register Confirmation Page (#{student.numero})
		if isNew
			p Student #{student.numero} inserted successfully!
			a(href='/students/' + student.numero) Student Page
		else
			p Student #{student.numero} updated successfully!
			a(href='/students/' + student.numero) Student Page
		footer.w3-container.w3-teal
			address Gerado por dawApp :: 2020-Nov
			a(href='/students') Home Page